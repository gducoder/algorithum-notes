<%= form_with model: @job, local: true do |form| %>

  <% if @job.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@job.errors.count, "error") %> prohibited
        this job from being created:
      </h2>
      <ul>
        <% @job.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-8 ">
      <p>
      <h3><%= form.label :Description %></h3>
      <div class="input-group input-group-md">
        <span class="input-group-addon" id="sizing-addon3"></span>
        <%= form.text_field :details ,  class: "form-control" %>
      </div>

      </p>


      <div class="col-sm-4 ">
      <p>
      <h3><%= form.label :"Source Co-ordinates" %></h3>
        <h5><%= form.label :"Latitude" %></h5>
      <div class="input-group input-group-md">
        <span class="input-group-addon" id="sizing-addon3"></span>

        <%= form.number_field :source_lat,step: :any,  class: "form-control" %>
      </div>
        <h5><%= form.label :"Longitude" %></h5>
        <div class="input-group input-group-md">
          <span class="input-group-addon" id="sizing-addon3"></span>

          <%= form.number_field :source_long,step: :any,  class: "form-control" %>
        </div>


      </p>

      <p>
      <h3><%= form.label :"Destination Co-ordinates" %></h3>

        <h5><%= form.label :"Latitude" %></h5>
        <div class="input-group input-group-md">
          <span class="input-group-addon" id="sizing-addon3"></span>

          <%= form.number_field :destination_lat,step: :any,  class: "form-control" %>
        </div>
        <h5><%= form.label :"Longitude" %></h5>
        <div class="input-group input-group-md">
          <span class="input-group-addon" id="sizing-addon3"></span>

          <%= form.number_field :destination_long,step: :any,  class: "form-control" %>
        </div>


      </p>

      <p>

        <%= form.button :Submit ,class: "btn btn-success pull-left"%>
        <%= link_to 'Back', jobs_path , class: "btn btn-primary pull-right" %>
      </p>
      </div>
    </div>
  </div>
<% end %>